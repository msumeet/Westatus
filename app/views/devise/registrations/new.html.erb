<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">
<h2 class="weform-title">Sign up in seconds</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages!%>

  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Enter your name', class: "weform-input" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'Enter your email', class: "weform-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Choose a password", class: "weform-input" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Retype your password", class: "weform-input" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign me up", class: "weform-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
