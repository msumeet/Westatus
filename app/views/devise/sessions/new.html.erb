<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">

    <h2 class="weform-title">Sign in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, placeholder: 'Enter your email', class: "weform-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter your password', class: "weform-input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.submit "Sign me in", class: "weform-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
