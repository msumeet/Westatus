<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">
    <% if current_page?(new_joke_path) %>
        <h2 class="weform-title">Submit Joke</h2>
      <% else %>
        <h2 class="weform-title">Editing Joke</h2>
      <% end %>

      <%= form_for(@joke) do |f| %>
        <% if @joke.errors.any? %>
          <div id="error_explanation" class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h2><%= pluralize(@joke.errors.count, "error") %> prohibited this joke from being saved:</h2>

            <ul>
            <% @joke.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :joke %>
          <%= f.text_area :jokefie, class: "weform-input-big" %>
        </div>
        <div class="form-group">
          <%= f.submit ("Submit"), class: "btn btn-success" %>
        </div>
      <% end %>

  </div>
</div>