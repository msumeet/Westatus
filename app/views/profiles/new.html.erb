<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">
  		<h2 class="weform-title">Create Your Profile</h2>

  		<%= form_for @profile, url: user_profile_path do |f| %>
  		<% if @profile.errors.any? %>
          <div id="error_explanation" class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h4>

            <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

	  		<div class="form-group">

              <div class="form-group">
                <%= f.label :avatar %>
                <%= f.file_field :avatar, class: 'form-control' %>
              </div>
	          <%= f.label :name %>
	          <%= f.text_field :name, placeholder: 'Enter your name', class: "weform-input" %>
	        </div>

	        <div class="form-group">
	          <%= f.label :about %>
	          <%= f.text_area :about, placeholder: 'Tell something about you.', class: "weform-input-big" %>
	        </div>

	        <div class="form-group">
          	<%= f.submit "Update Profile", class: 'weform-button' %>
        	</div>
  		<% end %>
  </div>
</div>
