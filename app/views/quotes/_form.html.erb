<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">
      <% if current_page?(new_quote_path) %>
        <h2 class="weform-title">Submit Quote</h2>
      <% else %>
        <h2 class="weform-title">Editing Quote</h2>
      <% end %>

      <%= form_for(@quote) do |f| %>
        <% if @quote.errors.any? %>
          <div id="error_explanation" class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h4>

            <ul>
            <% @quote.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :quote %><br>
          <%= f.text_area :quotefie, class: "weform-input-big" %>
        </div>
        <div class="form-group">
          <%= f.label :author %><br>
          <%= f.text_field :author, class: "weform-input" %>
        </div>
        <div class="actions">
          <%= f.submit ("Submit"), class: "btn btn-success" %>
        </div>
      <% end %>

  </div>
</div>
