<div class= "row">
  <div class="col-md-6 col-md-offset-3 weform top-margin">
      <% if current_page?(new_status_path) %>
        <h2 class="weform-title">Submit Status</h2>
      <% else %>
        <h2 class="weform-title">Editing Status</h2>
      <% end %>


      <%= form_for(@status) do |f| %>
        <% if @status.errors.any? %>
          <div id="error_explanation" class="alert alert-warning alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@status.errors.count, "error") %> prohibited this status from being saved:</h4>

            <ul>
            <% @status.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :status %><br>
          <%= f.text_area :statusfie, class: "weform-input-big" %>
        </div>
        <div class="form-group">
          <%= f.submit ("Submit"), class: "btn btn-success"  %>
        </div>
      <% end %>
  </div>
</div>